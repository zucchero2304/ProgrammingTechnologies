<Window x:Class="Presentation.Views.ProductInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Views"
        mc:Ignorable="d"
        Title="ProductInfoView" Height="265.727" Width="370.03">
    <DockPanel LastChildFill="True">
        <Label DockPanel.Dock="Top" FontSize="48" FontFamily="Mistral" Foreground="Aqua">Saved!</Label>
        <Rectangle DockPanel.Dock="Bottom" Height="64" Fill="Beige"></Rectangle>
        <Label DockPanel.Dock="Top" Content="{Binding Info, FallbackValue='Your data was updated.'}" VerticalContentAlignment="Bottom"></Label>
    </DockPanel>
</Window>
